<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.john.project3.StudentDetailsActivity"
    tools:showIn="@layout/activity_student_details">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@id/ratingBar1"
            android:id="@+id/skills_title"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/text_margin"
            android:padding="3dp"
            android:text="@string/skills_header"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/details_skills"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_below="@id/skills_title"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/open_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/details_skills"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:text="@string/open_header"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/details_open"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/open_title"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:padding="3dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/details_ga_profile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/details_open"
            android:paddingLeft="20dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"/>

        <Button
            android:id="@+id/details_linkedin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/details_ga_profile"
            android:paddingLeft="20dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"/>

        <TextView
            android:id="@+id/details_github"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/details_linkedin"
            android:paddingLeft="20dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"/>

        <TextView
            android:id="@+id/details_other"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/details_github"
            android:paddingLeft="20dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"/>
        <Button
            android:id="@+id/details_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/details_other"
            android:paddingLeft="20dp"
            android:background="@color/gaYellow"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/call_button"
                android:background="@android:color/holo_green_light"
                android:layout_below="@+id/details_email"
                android:layout_marginBottom="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                />

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="test alert"-->
        <!--android:id="@+id/test"-->
        <!--/>-->
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
